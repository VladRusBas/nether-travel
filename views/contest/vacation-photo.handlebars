<form class="form-horizontal" role="form" enctype="multipart/form-data" action="/contest/vacation-photo/{year}/{month}" method="post">
    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" name="name" id="fieldName" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="email" name="email" id="fieldEmail" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="fieldPhoto" class="col-sm-2 control-label">Photo from vacation</label>
        <div class="col-sm-4">
            <input type="file" class="form-control" id="fieldPhoto" name="photo" required accept="image/*">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" name="btn btn-primary">Send</button>
        </div>
    </div>
</form>
